<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticShowActivity"
    >

    <TextView
        android:id="@+id/infected"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:background="@drawable/curved_rectangle"
        android:textColor="@drawable/user_route_button_text_color"
        android:text="확진자 현황"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="47dp" />

    <TextView
        android:id="@+id/vaccinated"
        android:layout_width="133dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="백신 접종 현황"
        android:textColor="@drawable/user_route_button_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="47dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="330dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="375dp" />

    <TextView
        android:id="@+id/firstShot"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:background="@drawable/curved_rectangle"
        android:backgroundTint="#50BEC9"
        android:gravity="center"
        android:text="1차 접종\n"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="184dp" />


    <TextView
        android:id="@+id/secondShot"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:background="@drawable/curved_rectangle"
        android:backgroundTint="#50BEC9"
        android:gravity="center"
        android:text="2차 접종\n"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/boosterShot"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:background="@drawable/curved_rectangle"
        android:backgroundTint="#50BEC9"
        android:gravity="center"
        android:text="부스터샷\n"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/allVaccinated"
        android:layout_width="277dp"
        android:layout_height="43dp"
        android:text="전국 백신 누적 접종 현황"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="60dp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:id="@+id/stackVaccinated"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:text="누적 접종자 현황"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="318dp" />


</androidx.constraintlayout.widget.ConstraintLayout>