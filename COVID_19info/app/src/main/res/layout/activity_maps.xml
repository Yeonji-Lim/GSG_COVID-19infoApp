<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    <com.google.android.material.bottomnavigation.BottomNavigationView-->
    <!--    android:id="@+id/bottomNavigationView"-->
    <!--    android:layout_width="match_parent"-->
    <!--    android:layout_height="wrap_content"-->
    <!--    app:layout_constraintStart_toStartOf="parent"-->
    <!--    app:layout_constraintBottom_toBottomOf="parent"-->
    <!--    app:menu="@menu/bottom_navigation_menu"-->
    <!--    app:itemBackground="@android:color/white"-->
    <!--        />-->

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".MapsActivity" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_40"
        android:background="@drawable/curved_rectangle"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigation_menu" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="376dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"
            android:layout_weight="1"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/cons_term0"
            android:layout_width="@dimen/term_button_width"
            android:layout_height="@dimen/term_button_height"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="68dp"
            android:background="@drawable/user_route_button"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="3일"
            android:textColor="@drawable/user_route_button_text_color"
            android:textSize="20sp"
            android:layout_weight="1"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@+id/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/cons_term1"
            android:layout_width="@dimen/term_button_width"
            android:layout_height="@dimen/term_button_height"
            android:layout_marginEnd="12dp"
            android:background="@drawable/user_route_button"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_weight="1"
            android:text="5일"
            android:textColor="@drawable/user_route_button_text_color"
            android:textSize="20sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@+id/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/cons_term2"
            android:layout_width="@dimen/term_button_width"
            android:layout_height="@dimen/term_button_height"
            android:layout_marginEnd="12dp"
            android:background="@drawable/user_route_button"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="1주"
            android:textColor="@drawable/user_route_button_text_color"
            android:textSize="20sp"
            android:layout_weight="1"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@+id/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <Button
            android:id="@+id/cons_term3"
            android:layout_width="@dimen/term_button_width"
            android:layout_height="@dimen/term_button_height"
            android:layout_marginEnd="12dp"
            android:background="@drawable/user_route_button"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="2주"
            android:textColor="@drawable/user_route_button_text_color"
            android:textSize="20sp"
            android:layout_weight="1"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@+id/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="?attr/homeAsUpIndicator" />


    </LinearLayout>

    <Button
        android:id="@+id/changeView"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/user_route_button"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="사용자 동선"
        android:textColor="@drawable/user_route_button_text_color"
        android:textSize="11sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/marker_info_color0"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_weight="0.005"
            android:width="2dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/marker_red" />

        <TextView
            android:id="@+id/marker_info0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" ~3일" />

        <ImageView
            android:id="@+id/marker_info_color1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_weight="0.005"
            android:width="2dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/marker_orange" />

        <TextView
            android:id="@+id/marker_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" ~5일" />

        <ImageView
            android:id="@+id/marker_info_color2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_weight="0.005"
            android:width="2dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/marker_green" />

        <TextView
            android:id="@+id/marker_info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" ~1주일" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/curved_rectangle"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".MapsActivity" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/user_profile_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/gray"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/user_profile_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/map" />

</androidx.constraintlayout.widget.ConstraintLayout>