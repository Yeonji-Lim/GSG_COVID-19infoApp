<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false"
        android:shape="rectangle">
        <shape>
            <corners
                android:radius="20dp"/>
            <solid
                android:color="@color/white"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>

    <item android:state_selected="true"
        android:shape="rectangle">
        <shape>
            <corners
                android:radius="20dp"/>
            <solid
                android:color="@color/black"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>

    </item>
</selector>